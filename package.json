{
	"name": "crypto-tools",
	"displayName": "Crypto Tools",
	"description": "Contains lots of encoding/decoding and encryption/decryption tools like base64„ÄÅhash„ÄÅurlencode„ÄÅAES„ÄÅRSA„ÄÅVigenere„ÄÅCaesar„ÄÅetc.,and additional provides some text manipulation functions",
	"version": "0.0.2",
	"publisher": "fofolee",
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"crypto",
		"encode",
		"decoden",
		"encrypt",
		"decrypt",
		"text manipulation",
		"output color"
	],
	"bugs": {
		"url": "https://github.com/fofolee/vscode-crypto-tools/issues",
		"email": "fofolee@live.cn"
	},
	"homepage": "https://github.com/fofolee/vscode-crypto-tools/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/fofolee/vscode-crypto-tools.git"
	},
	"icon": "icon.png",
	"activationEvents": [
		"onCommand:crypto.EncodeDecode",
		"onCommand:crypto.EncryptDecrypt",
		"onCommand:crypto.textManipulation",
		"onCommand:crypto.hexadecimalCalculator",
		"onCommand:crypto.outputColorPatch"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "crypto.EncodeDecode",
				"title": "Encoding and Decoding",
				"category": "üîêCrypto"
			},
			{
				"command": "crypto.EncryptDecrypt",
				"title": "Encryption and Decryption",
				"category": "üîêCrypto"
			},
			{
				"command": "crypto.textManipulation",
				"title": "Text manipulation",
				"category": "üîêCrypto"
			},
			{
				"command": "crypto.hexadecimalCalculator",
				"title": "Hexadecimal calculator",
				"category": "üîêCrypto"
			},
			{
				"command": "crypto.outputColorPatch",
				"title": "Fix output channel color conflicts",
				"category": "üîêCrypto"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorHasSelection",
					"command": "crypto.EncodeDecode",
					"group": "7_modification"
				},
				{
					"when": "editorHasSelection",
					"command": "crypto.EncryptDecrypt",
					"group": "7_modification"
				},
				{
					"when": "editorHasSelection",
					"command": "crypto.textManipulation",
					"group": "7_modification"
				}
			]
		},
		"keybindings": [
			{
				"command": "crypto.EncodeDecode",
				"key": "ctrl+alt+d",
				"when": "editorHasSelection"
			},
			{
				"command": "crypto.EncryptDecrypt",
				"key": "ctrl+alt+a",
				"when": "editorHasSelection"
			},
			{
				"command": "crypto.textManipulation",
				"key": "ctrl+alt+t",
				"when": "editorHasSelection"
			},
			{
				"command": "crypto.hexadecimalCalculator",
				"key": "ctrl+alt+c"
			}
		],
		"languages": [
			{
				"id": "crypto-output",
				"mimetypes": [
					"text/x-code-output"
				]
			}
		],
		"grammars": [
			{
				"language": "crypto-output",
				"scopeName": "crypto.output",
				"path": "./syntaxes/crypto-tools-output.tmLanguage"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^14.14.10",
		"@types/vscode": "^1.51.0",
		"eslint": "^7.14.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"bubble_babble": "^0.2.0",
		"htmlencode": "0.0.4",
		"iconv-lite": "^0.4.24",
		"quoted-printable": "^1.0.1",
		"safer-buffer": "^2.1.2",
		"urlencode": "^1.1.0",
		"utf8": "^3.0.0",
		"xmorse": "^1.0.0"
	}
}
